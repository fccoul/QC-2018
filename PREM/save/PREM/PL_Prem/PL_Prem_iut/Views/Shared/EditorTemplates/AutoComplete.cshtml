@using System.Collections
@model String
@{
    RouteValueDictionary htmlAttributes = new RouteValueDictionary();
    string labelText = "";

    if (ViewBag.asterisk != null)
    {
        htmlAttributes.Add("required", "required");
    }

    if ((ViewBag.classe) != null)
    {
        htmlAttributes.Add("class", ("form-control select2recherche " + ViewBag.classe));
    }
    else
    {
        htmlAttributes.Add("class", "form-control select2recherche");
    }
    if ((ViewBag.type) != null)
    {
        htmlAttributes.Add("type", ViewBag.type);
    }
    if ((ViewBag.placeholder) != null)
    {
        htmlAttributes.Add("placeholder", ViewBag.placeholder);
    }
    if ((ViewBag.mask) != null)
    {
        htmlAttributes.Add("mask", ViewBag.mask);
    }
    if ((ViewBag.lectureSeule) != null)
    {
        htmlAttributes.Add("readonly", ViewBag.lectureSeule);
    }
    if ((ViewBag.Maxlength) != null)
    {
        htmlAttributes.Add("maxlength", ViewBag.Maxlength);
    }
    if ((ViewBag.name) != null)
    {
        htmlAttributes.Add("name", ViewBag.name);
    }
    if ((ViewBag.id) != null)
    {
        htmlAttributes.Add("id", ViewBag.id);
    }

    if ((ViewBag.label) != null)
    {
        labelText = ViewBag.label;
    }

    if ((ViewBag.classesProfessionnelUtilise) != null)
    {
        htmlAttributes.Add("classesProfessionnelUtilise", ViewBag.classesProfessionnelUtilise);
    }

    if ((ViewBag.filtreSpecialPourCreationAvis) != null)
    {
        htmlAttributes.Add("filtreSpecialPourCreationAvis", ViewBag.filtreSpecialPourCreationAvis);
    }
}
<div class="form-group">
    @if (String.IsNullOrWhiteSpace(labelText))
    {
        @Html.LabelFor(x => x, new {@class = "control-label"})
    }else{
        @Html.LabelFor(x => x, labelText, new {@class = "control-label"})
    }


    @Html.DropDownListFor(x => x, Enumerable.Empty<SelectListItem>() , "", htmlAttributes)
    @Html.ValidationMessageFor(x => x, null, new {@class = "help-block"})
</div>